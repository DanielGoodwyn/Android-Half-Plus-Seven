<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.halfplusseven.danielgoodwyn.halfplusseven" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Start"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.halfplusseven.danielgoodwyn.halfplusseven.LogIn"
            android:label="@string/logIn">
        </activity>
        <activity
            android:name=".Names"
            android:label="@string/user">
        </activity>
        <activity
            android:name="com.halfplusseven.danielgoodwyn.halfplusseven.User"
            android:label="@string/user">
        </activity>
        <activity
            android:name="com.halfplusseven.danielgoodwyn.halfplusseven.Add"
            android:label="@string/add">
        </activity>
        <activity
            android:name="com.halfplusseven.danielgoodwyn.halfplusseven.Answer"
            android:label="@string/answer">
        </activity>
        <activity
            android:name="com.halfplusseven.danielgoodwyn.halfplusseven.Results"
            android:label="@string/results">
        </activity>
    </application>

</manifest>
